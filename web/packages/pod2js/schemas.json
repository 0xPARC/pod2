{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "SchemaContainer",
  "type": "object",
  "required": [
    "mainpod",
    "pod_info",
    "signedpod",
    "space_info"
  ],
  "properties": {
    "mainpod": {
      "$ref": "#/definitions/MainPodHelper"
    },
    "signedpod": {
      "$ref": "#/definitions/SignedPodHelper"
    },
    "space_info": {
      "$ref": "#/definitions/SpaceInfo"
    },
    "pod_info": {
      "$ref": "#/definitions/PodInfo"
    }
  },
  "definitions": {
    "MainPodHelper": {
      "title": "MainPod",
      "type": "object",
      "required": [
        "podType",
        "proof",
        "publicStatements"
      ],
      "properties": {
        "publicStatements": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Statement"
          }
        },
        "proof": {
          "type": "string"
        },
        "podType": {
          "type": "string"
        }
      }
    },
    "Statement": {
      "description": "Type encapsulating statements with their associated arguments.",
      "oneOf": [
        {
          "type": "object",
          "required": [
            "predicate"
          ],
          "properties": {
            "predicate": {
              "type": "string",
              "enum": [
                "None"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "args",
            "predicate"
          ],
          "properties": {
            "predicate": {
              "type": "string",
              "enum": [
                "ValueOf"
              ]
            },
            "args": {
              "type": "array",
              "items": [
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/Value"
                }
              ],
              "maxItems": 2,
              "minItems": 2
            }
          }
        },
        {
          "type": "object",
          "required": [
            "args",
            "predicate"
          ],
          "properties": {
            "predicate": {
              "type": "string",
              "enum": [
                "Equal"
              ]
            },
            "args": {
              "type": "array",
              "items": [
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                }
              ],
              "maxItems": 2,
              "minItems": 2
            }
          }
        },
        {
          "type": "object",
          "required": [
            "args",
            "predicate"
          ],
          "properties": {
            "predicate": {
              "type": "string",
              "enum": [
                "NotEqual"
              ]
            },
            "args": {
              "type": "array",
              "items": [
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                }
              ],
              "maxItems": 2,
              "minItems": 2
            }
          }
        },
        {
          "type": "object",
          "required": [
            "args",
            "predicate"
          ],
          "properties": {
            "predicate": {
              "type": "string",
              "enum": [
                "LtEq"
              ]
            },
            "args": {
              "type": "array",
              "items": [
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                }
              ],
              "maxItems": 2,
              "minItems": 2
            }
          }
        },
        {
          "type": "object",
          "required": [
            "args",
            "predicate"
          ],
          "properties": {
            "predicate": {
              "type": "string",
              "enum": [
                "Lt"
              ]
            },
            "args": {
              "type": "array",
              "items": [
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                }
              ],
              "maxItems": 2,
              "minItems": 2
            }
          }
        },
        {
          "type": "object",
          "required": [
            "args",
            "predicate"
          ],
          "properties": {
            "predicate": {
              "type": "string",
              "enum": [
                "Contains"
              ]
            },
            "args": {
              "type": "array",
              "items": [
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                }
              ],
              "maxItems": 3,
              "minItems": 3
            }
          }
        },
        {
          "type": "object",
          "required": [
            "args",
            "predicate"
          ],
          "properties": {
            "predicate": {
              "type": "string",
              "enum": [
                "NotContains"
              ]
            },
            "args": {
              "type": "array",
              "items": [
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                }
              ],
              "maxItems": 2,
              "minItems": 2
            }
          }
        },
        {
          "type": "object",
          "required": [
            "args",
            "predicate"
          ],
          "properties": {
            "predicate": {
              "type": "string",
              "enum": [
                "SumOf"
              ]
            },
            "args": {
              "type": "array",
              "items": [
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                }
              ],
              "maxItems": 3,
              "minItems": 3
            }
          }
        },
        {
          "type": "object",
          "required": [
            "args",
            "predicate"
          ],
          "properties": {
            "predicate": {
              "type": "string",
              "enum": [
                "ProductOf"
              ]
            },
            "args": {
              "type": "array",
              "items": [
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                }
              ],
              "maxItems": 3,
              "minItems": 3
            }
          }
        },
        {
          "type": "object",
          "required": [
            "args",
            "predicate"
          ],
          "properties": {
            "predicate": {
              "type": "string",
              "enum": [
                "MaxOf"
              ]
            },
            "args": {
              "type": "array",
              "items": [
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                }
              ],
              "maxItems": 3,
              "minItems": 3
            }
          }
        },
        {
          "type": "object",
          "required": [
            "args",
            "predicate"
          ],
          "properties": {
            "predicate": {
              "type": "string",
              "enum": [
                "HashOf"
              ]
            },
            "args": {
              "type": "array",
              "items": [
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                },
                {
                  "$ref": "#/definitions/AnchoredKey"
                }
              ],
              "maxItems": 3,
              "minItems": 3
            }
          }
        },
        {
          "type": "object",
          "required": [
            "args",
            "predicate"
          ],
          "properties": {
            "predicate": {
              "type": "string",
              "enum": [
                "Custom"
              ]
            },
            "args": {
              "type": "array",
              "items": [
                {
                  "$ref": "#/definitions/CustomPredicateRef"
                },
                {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/WildcardValue"
                  }
                }
              ],
              "maxItems": 2,
              "minItems": 2
            }
          }
        }
      ]
    },
    "AnchoredKey": {
      "type": "object",
      "required": [
        "key",
        "podId"
      ],
      "properties": {
        "podId": {
          "$ref": "#/definitions/PodId"
        },
        "key": {
          "$ref": "#/definitions/Key"
        }
      }
    },
    "PodId": {
      "$ref": "#/definitions/Hash"
    },
    "Hash": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{64}$"
    },
    "Key": {
      "type": "string"
    },
    "Value": {
      "description": "Represents various POD value types. Array, String, and Bool variants are represented untagged in JSON.",
      "anyOf": [
        {
          "type": "object",
          "required": [
            "Set"
          ],
          "properties": {
            "Set": {
              "$ref": "#/definitions/Set"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "Dictionary"
          ],
          "properties": {
            "Dictionary": {
              "$ref": "#/definitions/Dictionary"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "Int"
          ],
          "properties": {
            "Int": {
              "description": "An i64 represented as a string.",
              "type": "string"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "Raw"
          ],
          "properties": {
            "Raw": {
              "$ref": "#/definitions/RawValue"
            }
          }
        },
        {
          "$ref": "#/definitions/Array"
        },
        {
          "type": "string"
        },
        {
          "type": "boolean"
        }
      ]
    },
    "Set": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Value"
      },
      "uniqueItems": true
    },
    "Dictionary": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/Value"
      }
    },
    "RawValue": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{64}$"
    },
    "Array": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Value"
      }
    },
    "CustomPredicateRef": {
      "type": "object",
      "required": [
        "batch",
        "index"
      ],
      "properties": {
        "batch": {
          "$ref": "#/definitions/CustomPredicateBatch"
        },
        "index": {
          "type": "integer",
          "format": "uint",
          "minimum": 0.0
        }
      }
    },
    "CustomPredicateBatch": {
      "type": "object",
      "required": [
        "name",
        "predicates"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "predicates": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CustomPredicate"
          }
        }
      }
    },
    "CustomPredicate": {
      "description": "NOTE: fields are not public (outside of crate) to enforce the struct instantiation through the `::and/or` methods, which performs checks on the values.",
      "type": "object",
      "required": [
        "argsLen",
        "conjunction",
        "name",
        "statements"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "conjunction": {
          "description": "true for \"and\", false for \"or\"",
          "type": "boolean"
        },
        "statements": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/StatementTmpl"
          }
        },
        "argsLen": {
          "type": "integer",
          "format": "uint",
          "minimum": 0.0
        }
      }
    },
    "StatementTmpl": {
      "description": "Statement Template for a Custom Predicate",
      "type": "object",
      "required": [
        "args",
        "pred"
      ],
      "properties": {
        "pred": {
          "$ref": "#/definitions/Predicate"
        },
        "args": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/StatementTmplArg"
          }
        }
      }
    },
    "Predicate": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "type",
            "value"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "Native"
              ]
            },
            "value": {
              "$ref": "#/definitions/NativePredicate"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "type",
            "value"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "BatchSelf"
              ]
            },
            "value": {
              "type": "integer",
              "format": "uint",
              "minimum": 0.0
            }
          }
        },
        {
          "type": "object",
          "required": [
            "type",
            "value"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "Custom"
              ]
            },
            "value": {
              "$ref": "#/definitions/CustomPredicateRef"
            }
          }
        }
      ]
    },
    "NativePredicate": {
      "type": "string",
      "enum": [
        "None",
        "ValueOf",
        "Equal",
        "NotEqual",
        "LtEq",
        "Lt",
        "Contains",
        "NotContains",
        "SumOf",
        "ProductOf",
        "MaxOf",
        "HashOf",
        "DictContains",
        "DictNotContains",
        "SetContains",
        "SetNotContains",
        "ArrayContains",
        "GtEq",
        "Gt"
      ]
    },
    "StatementTmplArg": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "None"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "type",
            "value"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "Literal"
              ]
            },
            "value": {
              "$ref": "#/definitions/Value"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "type",
            "value"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "Key"
              ]
            },
            "value": {
              "type": "array",
              "items": [
                {
                  "$ref": "#/definitions/Wildcard"
                },
                {
                  "$ref": "#/definitions/KeyOrWildcard"
                }
              ],
              "maxItems": 2,
              "minItems": 2
            }
          }
        },
        {
          "type": "object",
          "required": [
            "type",
            "value"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "WildcardLiteral"
              ]
            },
            "value": {
              "$ref": "#/definitions/Wildcard"
            }
          }
        }
      ]
    },
    "Wildcard": {
      "type": "object",
      "required": [
        "index",
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "index": {
          "type": "integer",
          "format": "uint",
          "minimum": 0.0
        }
      }
    },
    "KeyOrWildcard": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "type",
            "value"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "Key"
              ]
            },
            "value": {
              "$ref": "#/definitions/Key"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "type",
            "value"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "Wildcard"
              ]
            },
            "value": {
              "$ref": "#/definitions/Wildcard"
            }
          }
        }
      ]
    },
    "WildcardValue": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "PodId"
          ],
          "properties": {
            "PodId": {
              "$ref": "#/definitions/PodId"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "Key"
          ],
          "properties": {
            "Key": {
              "$ref": "#/definitions/Key"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "SignedPodHelper": {
      "title": "SignedPod",
      "type": "object",
      "required": [
        "entries",
        "podType",
        "proof"
      ],
      "properties": {
        "entries": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/Value"
          }
        },
        "proof": {
          "type": "string"
        },
        "podType": {
          "type": "string"
        }
      }
    },
    "SpaceInfo": {
      "type": "object",
      "required": [
        "created_at",
        "id"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "created_at": {
          "type": "string"
        }
      }
    },
    "PodInfo": {
      "type": "object",
      "required": [
        "created_at",
        "data",
        "id",
        "pod_type",
        "space"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "pod_type": {
          "type": "string"
        },
        "data": {
          "$ref": "#/definitions/PodData"
        },
        "label": {
          "type": [
            "string",
            "null"
          ]
        },
        "created_at": {
          "type": "string"
        },
        "space": {
          "type": "string"
        }
      }
    },
    "PodData": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "pod_data_payload",
            "pod_data_variant"
          ],
          "properties": {
            "pod_data_variant": {
              "type": "string",
              "enum": [
                "Signed"
              ]
            },
            "pod_data_payload": {
              "$ref": "#/definitions/SignedPodHelper"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "pod_data_payload",
            "pod_data_variant"
          ],
          "properties": {
            "pod_data_variant": {
              "type": "string",
              "enum": [
                "Main"
              ]
            },
            "pod_data_payload": {
              "$ref": "#/definitions/MainPodHelper"
            }
          }
        }
      ]
    }
  }
}
